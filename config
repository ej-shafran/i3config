# $mod = Windows key
set $mod Mod4

# naming the workspaces
set $tag1 
set $tag2 
set $tag3 
set $tag4 
set $tag5 
set $tag6 
set $tag7 󰈻
set $tag8 󰓎
set $tag9 
set $tag0 󰌾

# font
font pango:JetBrains Mono Regular Nerd Font Complete 12

new_window pixel 2

# Mouse+$mod = drag floating windows to their wanted position
floating_modifier $mod

# focus doesn't follow mouse
focus_follows_mouse no

mode "(l)ock (s)leep (h)ybernate (r)eboot (p)oweroff (e)xit-i3" {
        bindsym l exec ~/.config/i3/bin/i3lock.sh; mode "default"
        bindsym s exec ~/.config/i3/bin/i3lock.sh && systemctl suspend; mode "default"
        bindsym h exec ~/.config/i3/bin/i3lock.sh && systemctl hibernate; mode "default"
        bindsym p exec systemctl poweroff; mode "default"
        bindsym r exec systemctl reboot; mode "default"
        bindsym e exec --no-startup-id i3-msg exit; mode "default"
        bindsym Return mode "default"
        bindsym Escape mode "default"
}
bindsym $mod+Shift+e mode "(l)ock (s)leep (h)ybernate (r)eboot (p)oweroff (e)xit-i3"

# mouse mode
mode "mouse" {
        # normal
        bindsym Up exec xdotool mousemove_relative -- 0 -30
        bindsym Down exec xdotool mousemove_relative -- 0 30
        bindsym Right exec xdotool mousemove_relative -- 30 0
        bindsym Left exec xdotool mousemove_relative -- -30 0
        bindsym k exec xdotool mousemove_relative -- 0 -30
        bindsym j exec xdotool mousemove_relative -- 0 30
        bindsym l exec xdotool mousemove_relative -- 30 0
        bindsym h exec xdotool mousemove_relative -- -30 0
        # faster(x2)
        bindsym $mod+Up exec xdotool mousemove_relative -- 0 -45
        bindsym $mod+Down exec xdotool mousemove_relative -- 0 45
        bindsym $mod+Right exec xdotool mousemove_relative -- 45 0
        bindsym $mod+Left exec xdotool mousemove_relative -- -45 0
        bindsym $mod+k exec xdotool mousemove_relative -- 0 -45
        bindsym $mod+j exec xdotool mousemove_relative -- 0 45
        bindsym $mod+l exec xdotool mousemove_relative -- 45 0
        bindsym $mod+h exec xdotool mousemove_relative -- -45 0
        # slower (1/3 normal)
        bindsym Control+Up exec xdotool mousemove_relative -- 0 -10
        bindsym Control+Down exec xdotool mousemove_relative -- 0 10
        bindsym Control+Right exec xdotool mousemove_relative -- 10 0
        bindsym Control+Left exec xdotool mousemove_relative -- -10 0
        bindsym Control+k exec xdotool mousemove_relative -- 0 -10
        bindsym Control+j exec xdotool mousemove_relative -- 0 10
        bindsym Control+l exec xdotool mousemove_relative -- 10 0
        bindsym Control+h exec xdotool mousemove_relative -- -10 0
        # click
        bindsym d exec xdotool click 2 # middle
        bindsym f exec xdotool click 3 # right
        bindsym s exec xdotool click 1 # left
        bindsym w exec xdotool click 4 # wheel up
        bindsym x exec xdotool click 5 # wheel down
        # exit mode
        bindsym Return mode "default"
        bindsym Escape mode "default"
}
bindsym $mod+g mode "mouse"

# resize window (you can also use the mouse for that)
mode "resize" {
        bindsym j resize shrink width 5 px or 5 ppt
        bindsym k resize grow height 5 px or 5 ppt
        bindsym l resize shrink height 5 px or 5 ppt
        bindsym semicolon resize grow width 5 px or 5 ppt

        # same bindings, but for the arrow keys
        bindsym Left resize shrink width 5 px or 5 ppt
        bindsym Down resize grow height 5 px or 5 ppt
        bindsym Up resize shrink height 5 px or 5 ppt
        bindsym Right resize grow width 5 px or 5 ppt

        # back to normal: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
}
bindsym $mod+r mode "resize"

# Start i3bar to display a workspace bar
bindsym $mod+b bar mode toggle
bar {
        i3bar_command /usr/bin/i3bar
        status_command i3blocks -c ~/.config/i3/i3blocks.conf
        tray_output primary
        position top
        colors {
            separator #202020
        }
}
