exec --no-startup-id feh ~/Pictures/Wallpapers/csm_background.jpg --bg-fill --auto-zoom
exec_always --no-startup-id "setxkbmap -layout us,il -option grp:win_space_toggle -model pc10"

exec --no-startup-id ~/.config/i3/bin/bar
exec --no-startup-id ~/.config/i3/bin/xinput-fix
exec --no-startup-id dunst
exec --no-startup-id ibus-daemon --xim -d -r
exec --no-startup-id dconf write /desktop/ibus/general/engines-order "['xkb:us::eng', 'Unikey']"
exec --no-startup-id xautolock -time 5 -locker '~/.config/i3/bin/i3lock.sh'
exec --no-startup-id ~/.config/i3/bin/redshift

